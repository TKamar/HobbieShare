<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:elevation="8dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp"
    android:theme="@style/Theme.MaterialComponents.Light">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEEEE"
        android:padding="10dp"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/list_IMG_image"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/list_LBL_description"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_background" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_LBL_hobby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/list_IMG_image"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="1"
            android:minLines="1"
            android:text="Hobby Title"
            android:textSize="18sp" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_LBL_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_LBL_hobby"
            android:layout_alignStart="@id/list_LBL_hobby"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Description"
            android:textSize="14sp"
            android:textIsSelectable="true"
            />


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>