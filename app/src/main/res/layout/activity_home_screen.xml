<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.activity_home_screen"
    android:background="@drawable/wallpaper_homescreen"

    >

                        <!-- Logo -->

    <ImageView
        android:id="@+id/title_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@android:color/transparent"
        android:src="@drawable/logo">

    </ImageView>

                         <!-- Buttons -->

    <ImageButton
        android:id="@+id/button_myHobbies"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/title_img"
        android:layout_centerInParent="true"
        android:layout_marginTop="80sp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/button_my_hobbies2">

    </ImageButton>

    <ImageButton
        android:id="@+id/button_create_new_event"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/button_myHobbies"
        android:layout_centerInParent="true"
        android:layout_marginTop="15sp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/button_create_new_event2"
        >

    </ImageButton>


    <ImageButton
        android:id="@+id/button_search_hobbies"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/button_create_new_event"
        android:layout_centerInParent="true"
        android:layout_marginTop="15sp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/button_search_hobbies2">

    </ImageButton>


    <ImageView
        android:id="@+id/bottom_dashboard"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="#233E8B"
        >

    </ImageView>

                        <!-- Bottom Dashboard -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:orientation="horizontal"

        >

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp"
            android:src="@drawable/home">

        </ImageButton>


        <ImageButton
            android:id="@+id/btn_location"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:baselineAlignBottom="true"
            android:scaleType="fitCenter"
            android:layout_marginTop="5dp"
            android:src="@drawable/placeholder">

        </ImageButton>


        <ImageButton
            android:id="@+id/btn_myGroups"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/group">

        </ImageButton>


        <ImageButton
            android:id="@+id/btn_myProfile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"

            android:layout_marginTop="3dp"
            android:src="@drawable/user">

        </ImageButton>


    </LinearLayout>


</RelativeLayout>