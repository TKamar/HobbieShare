<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.activity_opening_screen">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/wallpaper_homescreen">

    </ImageView>

    <ImageView
        android:id="@+id/activity_opening_screen_logo"

        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@android:color/transparent"
        android:src="@drawable/logo">

    </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/activity_opening_screen_logo"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:theme="@style/MyButton"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/activity_opening_screen_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="login"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            app:cornerRadius="5dp"
            android:theme="@style/MyButton"
            >

        </com.google.android.material.button.MaterialButton>



        <com.google.android.material.button.MaterialButton
            android:id="@+id/activity_opening_screen_register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="register"
            android:padding="5dp"
            app:cornerRadius="5dp"
        >


        </com.google.android.material.button.MaterialButton>
    </LinearLayout>




</RelativeLayout>
